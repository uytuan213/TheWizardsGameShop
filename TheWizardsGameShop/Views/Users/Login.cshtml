@model TheWizardsGameShop.Models.Users

@{ ViewData["Title"] = "Login"; }

<div class="page contents" id="pageSignUp">
    <div class="page-header page-header-full flex-center text-center">
        <div>
            <h1>Login</h1>
            @if (TempData["LoginMessage"] != null)
            {
                <h4>
                    @TempData["LoginMessage"]
                </h4> }
            else
            {
                <h4>
                    Welcome to The Wizards' Game Shop!
                </h4>}
        </div>
    </div>
    <div class="row page-body">
        <div class="col-md-4">
            <form asp-action="Login" class="narrow" style="max-width: 350px;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="actionName" value="@TempData["RequestedActionName"]" />
                <input type="hidden" name="controllerName" value="@TempData["RequestedControllerName"]" />
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <input type="password" asp-for="PasswordHash" class="form-control" />
                </div>
                <span class="text-danger">@TempData["Message"]</span>
                <div class="form-buttons text-center">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <div>
                    <hr style="margin: var(--spacing) 0 var(--spacing-s) 0;" />
                    <p>Not a member yet? &gt; <a asp-action="Create" class="link" style="color: var(--color-brand);">Create an account</a></p>
                    <p>Forgot password? &gt; <a asp-action="ResetPassword" class="link" style="color: var(--color-brand);">Reset password</a></p>
                </div>
            </form>
        </div>
    </div>

</div>
@{ 
    ViewData["Title"] = "Employee Portal";
    ViewData["HeaderMode"] = "Employee";
}

<div class="page contents" id="pageEmployeePortal" --data-theme="employee-portal">
    <div class="page-header flex-center">
        <h1>Employee Portal</h1>
    </div>
    <div class="page-body">
        <div class="list narrow">
            <a asp-controller="Games" asp-action="Admin" class="item clickable flex-center">
                <span class="material-icons">category</span>
                <p>Manage Games</p>
                <h5>Add, edit and delete games</h5>
            </a>
            <a asp-controller="Reviews" asp-action="Admin" class="item clickable flex-center">
                <span class="material-icons">rate_review</span>
                <p>Publish Reviews</p>
                <h5>View and publish pending user reviews</h5>
            </a>
            <a asp-controller="Reports" asp-action="Index" class="item clickable flex-center">
                <span class="material-icons">content_paste</span>
                <p>Reports</p>
                <h5>View and print reports</h5>
            </a>
            <a asp-controller="Orders" asp-action="Admin" class="item clickable flex-center">
                <span class="material-icons">receipt_long</span>
                <p>Orders</p>
                <h5>View and manage past and ongoing orders</h5>
            </a>
        </div>
    </div>
</div>
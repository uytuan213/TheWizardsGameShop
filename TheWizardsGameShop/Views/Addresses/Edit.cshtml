@model TheWizardsGameShop.Models.Address

@{
    ViewData["Title"] = "Edit Address";
}

<div class="page contents" id="pageAddresses" --data-theme="my-account">
    <div class="page-header flex-center">
        <h1>Addresses</h1>
    </div>
    <div class="row page-body">
        <div class="col-md-4">
            <form asp-action="Edit" class="narrow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AddressId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="Street1" class="control-label"></label>
                    <input asp-for="Street1" class="form-control" />
                    <span asp-validation-for="Street1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Street2" class="control-label"></label>
                    <input asp-for="Street2" class="form-control" />
                    <span asp-validation-for="Street2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProvinceCode" class="control-label"></label>
                    <select asp-for="ProvinceCode" class="form-control" asp-items="ViewBag.ProvinceCode"></select>
                    <span asp-validation-for="ProvinceCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressTypeId" class="control-label"></label>
                    <select asp-for="AddressTypeId" class="form-control" asp-items="ViewBag.AddressTypeId"></select>
                    <span asp-validation-for="AddressTypeId" class="text-danger"></span>
                </div>
                <div class="form-buttons text-center">
                    <input type="submit" value="Save" class="btn btn--primary" />
                    <a asp-action="Index" class="btn">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

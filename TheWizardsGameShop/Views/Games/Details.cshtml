@model TheWizardsGameShop.Models.Game

@{
    ViewData["Title"] = "Game Details";
}

<div class="page contents" id="pageGames" --data-theme="games">
    <div class="page-header flex-center">
        <h1>Games</h1>
    </div>
    <div class="page-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GamePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GamePrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameQty)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameQty)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameDigitalPath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameDigitalPath)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameCategory.GameCategory1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GameStatusCodeNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GameStatusCodeNavigation.GameStatusCode)
            </dd>
            <dd class="col-sm-10">
                @{ 
                    foreach(var i in Model.GameImage)
                    {
                        <p>@i.GameImagePath</p>
                    }
                }
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
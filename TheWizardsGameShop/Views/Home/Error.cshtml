@{ ViewData["Title"] = "Error"; }

<div class="page contents" id="pageError">
    <div class="page-body">
        <span class="material-icons">error</span>
        @if (ViewData["ErrorPageTitle"] != null || ViewData["ErrorPageMessage"] != null)
        {
            <h2>@ViewData["ErrorPageTitle"]</h2>
            <h4>@ViewData["ErrorPageMessage"]</h4>
        }
        else
        {
            <h2>Error</h2>
            <h4>Oops, something happened. Please try again later.</h4>
        }
    <p style="margin-top: 20px;">
        <a href="javascript:history.back()" class="btn">Go Back</a>
        <a asp-controller="Home" asp-action="Index" class="btn">Go Home</a>
    </p>
    </div>
</div>
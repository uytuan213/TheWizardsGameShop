@model TheWizardsGameShop.Models.Relationship

@{
    ViewData["Title"] = "Add a Friend/Family";
}

<div class="page contents" id="pagePeople" --data-theme="my-account">
    <div class="page-header flex-center">
        <h1>People</h1>
    </div>
    <div class="row page-body">
        <p class="page-submenu">
            <a asp-controller="Relationships" asp-action="Index" class="item">&lt; Back to List</a>
        </p>
        <div class="col-md-4">
            <form asp-action="Create" class="text-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Sender" value="@ViewBag.UserId" />
                <input type="hidden" asp-for="Receiver" />
                <input type="hidden" asp-for="IsAccepted" />
                <div class="form-group">
                    <label class="control-label">Enter the username of your friend or family you want to add</label>
                    <input name="receiverUserName" id="receiverUserName" class="form-control" required />
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFamily" /> Add as a family member instead of friend
                    </label>
                </div>
                <span class="text-danger">@TempData["Message"]</span>
                <div class="form-buttons text-center">
                    <input type="submit" value="Invite" class="btn btn--primary" />
                    <a asp-controller="Relationships" asp-action="Index" class="btn">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

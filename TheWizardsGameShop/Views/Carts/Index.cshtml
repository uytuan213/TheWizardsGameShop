@model List<CartItem>

@{ ViewData["Title"] = "Cart"; }

<div class="page contents" id="pageCart" --data-theme="my-account">
    <div class="page-header flex-center">
        <h1>Cart</h1>
    </div>
    <div class="page-body">
        @{ if (Model.Count > 0) foreach (var item in Model)
                {
    <div class="item">
        <p>
            <a href="/Games/Details/@item.Game.GameId">@item.Game.GameName</a>
        </p>

        <p>
            @item.Quantity
        </p>
    </div> }
                else
                {
                    <p>Cart empty!</p>
                }
            }
    </div>
    </div>
</div>
@model TheWizardsGameShop.Models.WizardsOrder

@{
    ViewData["Title"] = "Checkout";
}

<div class="page contents" id="pageCart" --data-theme="my-account">
    <div class="page-header short flex-center-vertical">
        <h1><span class="material-icons">shopping_cart</span>Checkout</h1>
    </div>
    <div class="row page-body">
        <p class="page-submenu">
            <a asp-controller="Carts" asp-action="Index" class="item">&lt; Back to Cart</a>
        </p>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Total" class="control-label"></label>
                    <span asp-validation-for="Total" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreditCardId" class="control-label"></label>
                    <select asp-for="CreditCardId" class="form-control" asp-items="ViewBag.CreditCardId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="MailingAddressId" class="control-label"></label>
                    <select asp-for="MailingAddressId" class="form-control" asp-items="ViewBag.MailingAddressId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ShippingAddressId" class="control-label"></label>
                    <select asp-for="ShippingAddressId" class="form-control" asp-items="ViewBag.ShippingAddressId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="OrderStatusId" class="control-label"></label>
                    <select asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatusId"></select>
                </div>
                <div class="form-buttons text-center">
                    <input type="submit" value="Confirm Checkout" class="btn btn--primary" />
                    <a asp-controller="Carts" asp-action="Index" class="btn">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
